<Page x:Class="Hotel.Pages.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Hotel.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminPage">

    <Grid>
        <StackPanel Width="300" Height="250">
            <RadioButton Name="IsAdmin" Content="Добавить администратора" FontSize="16" Margin="0,0,0,10"/>
            <TextBlock Text="Логин" FontSize="14"/>
            <TextBox Name="Login" Tag="Логин" FontSize="16"/>
            
            <TextBlock Text="Пароль" FontSize="14"/>
            <TextBox Name="Password"  Tag="Пароль" FontSize="16"/>

            <TextBlock Text="ФИО" FontSize="14"/>
            <TextBox Name="FullName" Tag="ФИО" FontSize="16"/>

            <TextBlock Text="Номер телефона" FontSize="14"/>
            <TextBox Name="Phone"  Tag="Номер телефона" FontSize="16"/>

            <Button  Content="Зарегистрировать пользователя" Click="ButtonReg_Click" Margin="10" FontSize="16"/>
        </StackPanel>
    </Grid>
</Page>
