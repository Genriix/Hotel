<Page x:Class="Hotel.Pages.ClientPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Hotel.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ClientPage">

    <StackPanel Width="150" Height="250">
        <TextBlock Text="Старый пароль" FontSize="14"/>
        <TextBox Name="OldPassword" FontSize="16"/>

        <TextBlock Text="Новый пароль" FontSize="14"/>
        <TextBox Name="NewPassword" FontSize="16"/>

        <TextBlock Text="Повторите пароль" FontSize="14" Margin="0, 10, 0, 0"/>
        <TextBox Name="RepetePassword" FontSize="16"/>

        <Button  Content="Сохранить" Click="ButtonSave_Click" Margin="0, 10, 0, 0" FontSize="16" Width="100"/>
    </StackPanel>
</Page>
