<Page x:Class="Hotel.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Hotel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <ScrollViewer>
        <Grid VerticalAlignment="Center" HorizontalAlignment="Center">

            <Rectangle HorizontalAlignment="Center" VerticalAlignment="Center" Height="294" Width="212" Fill="#FFEFEFEF" RadiusX="25" RadiusY="25"/>

            <StackPanel Width="130" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Label Content="Логин" HorizontalAlignment="Left" Height="30" Width="60" FontSize="16"/>
                <TextBox Name="Login" TextWrapping="Wrap" Text="" Width="120" FontSize="16"/>
                <Label  Content="Пароль" HorizontalAlignment="Left" Height="30" Width="74" FontSize="16"/>
                <PasswordBox Name="Password" Width="120" Password="" FontSize="16"/>
                <Button Content="Войти" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Button_Click" Background="#FF089A1E" Foreground="White" Height="30" Width="136" Margin="7"/>
            </StackPanel>
                
        </Grid>
    </ScrollViewer>
</Page>
